<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Fragment>
        <UI>
            <Dialog Id="WarningDlg" Width="260" Height="85" Title="[ProductName] Setup">
                <Control Id="OK" Type="PushButton" X="102" Y="57" Width="56" Height="17" Default="yes" Cancel="yes" Text="!(loc.WixUIOK)">
                    <Publish Event="EndDialog" Value="Return" />
                    <Publish Property="BALLERINA_INSTALLATION_WARNING" Value="0" />
                </Control>
                <Control Id="WarningIcon"  Type="Icon" X="15" Y="15" Width="24" Height="24" ToolTip="Exclamation icon" FixedSize="yes" IconSize="32" Text="WixUI_Ico_Exclam" />
                <Control Id="WarningText" Type="Text" X="48" Y="22" Width="194" Height="30">
                    <Text
                        Value="A previous installation of Ballerina exists. This installer will switch the active version to the one being installed." />
                </Control>
            </Dialog>
        </UI>
    </Fragment>
</Wix>